<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.SVGPath?>

<DialogPane prefWidth="400" prefHeight="100" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.timelordtty.projectCalendar.ProjectDeleteDialogController"
           styleClass="custom-dialog">
    <content>
        <GridPane hgap="10" vgap="10" style="-fx-background-color: white; -fx-padding: 15;">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            
            <!-- 警告图标和项目名称 -->
            <HBox spacing="10" alignment="CENTER_LEFT" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2">
                <SVGPath content="M12,2L1,21H23M12,6L19.53,19H4.47M11,10V14H13V10M11,16V18H13V16" 
                        style="-fx-fill: #FF6B88;" scaleX="1.2" scaleY="1.2" />
                <Label fx:id="projectNameLabel" text="项目名称" 
                      style="-fx-font-weight: bold; -fx-font-size: 14px;" />
            </HBox>
            
            <!-- 确认信息 -->
            <Label text="删掉就真的没办法恢复了哦~" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2"
                  style="-fx-text-fill: #FF6B88; -fx-font-size: 13px;" />
            
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="300" prefWidth="350" />
            </columnConstraints>
        </GridPane>
    </content>
    <buttonTypes>
        <ButtonType fx:constant="OK" />
        <ButtonType fx:constant="CANCEL" />
    </buttonTypes>
</DialogPane> 