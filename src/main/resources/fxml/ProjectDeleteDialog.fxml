<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<DialogPane prefWidth="400" prefHeight="200" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.timelordtty.projectCalendar.ProjectDeleteDialogController">
    <header>
        <HBox styleClass="dialog-header" alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #8D6E63; -fx-padding: 10;">
            <Label text="删除项目" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;" />
        </HBox>
    </header>
    <content>
        <GridPane hgap="10" vgap="10" style="-fx-background-color: white; -fx-padding: 15;">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            
            <!-- 项目名称 -->
            <Label fx:id="projectNameLabel" text="项目名称" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"
                  style="-fx-font-weight: bold; -fx-font-size: 14px;" />
            
            <!-- 确认信息 -->
            <Label text="删掉就真的没办法恢复了哦~" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2"
                  style="-fx-text-fill: #D32F2F;" />
            
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="300" prefWidth="350" />
            </columnConstraints>
        </GridPane>
    </content>
    <buttonTypes>
        <ButtonType fx:constant="OK" />
        <ButtonType fx:constant="CANCEL" />
    </buttonTypes>
</DialogPane> 