<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.timelordtty.controller.TextCorrectorController"
      prefHeight="400.0" prefWidth="600.0">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="文本纠错工具" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
    
    <SplitPane dividerPositions="0.6" orientation="VERTICAL" VBox.vgrow="ALWAYS">
        <VBox spacing="10">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="输入文本:"/>
                <Button text="纠错" onAction="#correctText" HBox.hgrow="NEVER"/>
                <Button text="清空" onAction="#clearText" HBox.hgrow="NEVER"/>
            </HBox>
            
            <TextArea fx:id="inputTextArea" promptText="请输入需要纠错的文本..." wrapText="true" VBox.vgrow="ALWAYS"/>
            
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="纠错结果:"/>
                <Button text="复制结果" onAction="#copyResult" HBox.hgrow="NEVER"/>
            </HBox>
            
            <TextArea fx:id="resultTextArea" promptText="纠错后的文本将显示在这里..." wrapText="true" editable="false" VBox.vgrow="ALWAYS"/>
        </VBox>
        
        <VBox spacing="10">
            <Label text="纠错详情:" />
            <TableView fx:id="correctionTableView" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="originalColumn" text="原文" prefWidth="200"/>
                    <TableColumn fx:id="correctedColumn" text="纠正" prefWidth="200"/>
                    <TableColumn fx:id="positionColumn" text="位置" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </SplitPane>
</VBox> 