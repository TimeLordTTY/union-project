<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.geometry.Insets?>

<BorderPane prefHeight="600.0" 
prefWidth="800.0" 
xmlns="http://javafx.com/javafx/17" 
xmlns:fx="http://javafx.com/fxml/1" 
fx:controller="com.timelordtty.MainController"
stylesheets="@../css/styles.css">
<top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: -theme-primary; -fx-padding: 10;">
            <Region HBox.hgrow="ALWAYS" />
            
            <!-- 主题选择按钮区域 -->
            <HBox fx:id="themeButtonContainer" spacing="5" alignment="CENTER">
                <Label text="主题:" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                <Button fx:id="whiteThemeButton" onAction="#handleWhiteThemeClick" 
                        style="-fx-min-width: 25px; -fx-max-width: 25px; -fx-min-height: 25px; -fx-max-height: 25px; -fx-background-radius: 50%; -fx-border-radius: 50%; -fx-background-color: #F5F5F5; -fx-border-color: #424242; -fx-border-width: 2px; -fx-cursor: hand;"/>
                <Button fx:id="pinkThemeButton" onAction="#handlePinkThemeClick" 
                        style="-fx-min-width: 25px; -fx-max-width: 25px; -fx-min-height: 25px; -fx-max-height: 25px; -fx-background-radius: 50%; -fx-border-radius: 50%; -fx-background-color: #FFCDD2; -fx-border-color: transparent; -fx-border-width: 1px; -fx-cursor: hand;"/>
                <Button fx:id="yellowThemeButton" onAction="#handleYellowThemeClick" 
                        style="-fx-min-width: 25px; -fx-max-width: 25px; -fx-min-height: 25px; -fx-max-height: 25px; -fx-background-radius: 50%; -fx-border-radius: 50%; -fx-background-color: #FFF9C4; -fx-border-color: transparent; -fx-border-width: 1px; -fx-cursor: hand;"/>
                <Button fx:id="blueThemeButton" onAction="#handleBlueThemeClick" 
                        style="-fx-min-width: 25px; -fx-max-width: 25px; -fx-min-height: 25px; -fx-max-height: 25px; -fx-background-radius: 50%; -fx-border-radius: 50%; -fx-background-color: #BBDEFB; -fx-border-color: transparent; -fx-border-width: 1px; -fx-cursor: hand;"/>
                <Button fx:id="cyanThemeButton" onAction="#handleCyanThemeClick" 
                        style="-fx-min-width: 25px; -fx-max-width: 25px; -fx-min-height: 25px; -fx-max-height: 25px; -fx-background-radius: 50%; -fx-border-radius: 50%; -fx-background-color: #B2EBF2; -fx-border-color: transparent; -fx-border-width: 1px; -fx-cursor: hand;"/>
            </HBox>
            
            <Region minWidth="20" />
            
            <HBox fx:id="toolbarButtonContainer" spacing="8" alignment="CENTER_RIGHT">
                <Button fx:id="amountToolButton" text="金额数字小插件" onAction="#handleAmountToolClick"
                        styleClass="tool-button" style="-fx-background-color: white; -fx-text-fill: -theme-text; -fx-cursor: hand; -fx-background-radius: 15; -fx-padding: 5 12; -fx-font-size: 12;" />
                <Button fx:id="docGenToolButton" text="文档生成小插件" onAction="#handleDocGenToolClick"
                        styleClass="tool-button" style="-fx-background-color: white; -fx-text-fill: -theme-text; -fx-cursor: hand; -fx-background-radius: 15; -fx-padding: 5 12; -fx-font-size: 12;" />
                <Button fx:id="textCorrectionToolButton" text="文本处理小插件" onAction="#handleTextCorrectionToolClick"
                        styleClass="tool-button" style="-fx-background-color: white; -fx-text-fill: -theme-text; -fx-cursor: hand; -fx-background-radius: 15; -fx-padding: 5 12; -fx-font-size: 12;" />
            </HBox>
        </HBox>
    </top>
   <center>
      <StackPane>
        <!-- 主项目管理视图 -->
        <fx:include fx:id="projectCalendar" source="ProjectCalendarView.fxml"/>
        
        <!-- 小工具容器，默认隐藏 -->
        <VBox fx:id="toolsContainer" visible="false" StackPane.alignment="TOP_RIGHT" 
              style="-fx-background-color: #FFF5F8; -fx-border-color: -theme-border; -fx-border-radius: 8; -fx-effect: dropshadow(three-pass-box, -theme-shadow, 10, 0, 0, 0);">
            <padding>
                <Insets top="8" right="8" bottom="8" left="8"/>
            </padding>
            <HBox alignment="CENTER_RIGHT" style="-fx-background-color: -theme-primary; -fx-background-radius: 5 5 0 0; -fx-padding: 5;">
                <Label fx:id="toolTitle" text="金额转换" style="-fx-font-weight: bold; -fx-text-fill: -theme-text;"/>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="closeToolButton" text="收起 ▲" onAction="#handleCloseToolClick"
                        style="-fx-background-color: transparent; -fx-cursor: hand; -fx-text-fill: -theme-text;"/>
            </HBox>
            <StackPane fx:id="toolContentArea" VBox.vgrow="ALWAYS" style="-fx-padding: 5;">
                <!-- 工具内容将动态添加到这里 -->
            </StackPane>
            <prefWidth>400</prefWidth>
            <prefHeight>350</prefHeight>
            <maxWidth>450</maxWidth>
        </VBox>
      </StackPane>
   </center>
</BorderPane> 