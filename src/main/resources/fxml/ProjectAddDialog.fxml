<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>

<DialogPane prefWidth="450" prefHeight="550" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
    fx:controller="com.timelordtty.projectCalendar.ProjectAddDialogController"
    stylesheets="@../css/styles.css" styleClass="custom-dialog">
    <header>
        <HBox styleClass="dialog-header" alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #8D6E63; -fx-padding: 10;">
            <Label text="项目信息" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;" />
        </HBox>
    </header>
    <content>
        <GridPane hgap="10" vgap="10" style="-fx-background-color: white; -fx-padding: 15;">
            <!-- 项目名称 -->
            <Label text="项目名称:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="projectNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="300" />
            
            <!-- 项目上网日期 -->
            <Label text="项目上网日期:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <DatePicker fx:id="onlineDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="300" />
            
            <!-- 报名期限 -->
            <Label text="报名期限(工作日):" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="registrationPeriodField" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="300" />
            
            <!-- 报名截止日期 -->
            <Label text="报名截止日期:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <HBox GridPane.columnIndex="1" GridPane.rowIndex="3" alignment="CENTER_LEFT" spacing="5">
                <Label fx:id="registrationEndDateLabel" text="(自动计算)" style="-fx-font-style: italic; -fx-background-color: #f5f5f5; -fx-padding: 5; -fx-background-radius: 3;" />
            </HBox>
            
            <!-- 评审周期 -->
            <Label text="评审周期(自然日):" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <TextField fx:id="reviewPeriodField" GridPane.columnIndex="1" GridPane.rowIndex="4" prefWidth="300" />
            
            <!-- 最早评审日期 -->
            <Label text="最早评审日期:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <HBox GridPane.columnIndex="1" GridPane.rowIndex="5" alignment="CENTER_LEFT" spacing="5">
                <Label fx:id="earliestReviewDateLabel" text="(自动计算)" style="-fx-font-style: italic; -fx-background-color: #f5f5f5; -fx-padding: 5; -fx-background-radius: 3;" />
            </HBox>
            
            <!-- 预计评审日期 -->
            <Label text="预计评审日期:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
            <DatePicker fx:id="expectedReviewDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="6" prefWidth="300" />
            
            <!-- 项目备注 -->
            <Label text="项目备注:" GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.valignment="TOP">
                <GridPane.margin>
                    <Insets top="5.0" />
                </GridPane.margin>
            </Label>
            <TextArea fx:id="remarkArea" GridPane.columnIndex="1" GridPane.rowIndex="7" 
                prefHeight="100.0" wrapText="true" />
                
            <!-- 提示信息 -->
            <Label fx:id="validationLabel" text="" GridPane.columnIndex="0" GridPane.rowIndex="8" 
                GridPane.columnSpan="2" style="-fx-text-fill: red;" />
                
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="120" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="300" />
            </columnConstraints>
        </GridPane>
    </content>
    <buttonTypes>
        <ButtonType fx:constant="OK" />
        <ButtonType fx:constant="CANCEL" />
    </buttonTypes>
</DialogPane> 