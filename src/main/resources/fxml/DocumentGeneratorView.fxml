<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<VBox fx:id="mainPane" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.timelordtty.docgen.controller.DocumentGeneratorController"
      prefHeight="900.0" prefWidth="1400.0"
      style="-fx-background-color: #fff5f8;"
      stylesheets="@../css/styles.css">
      
    <!-- 使用网格布局将界面分为四列 -->
    <GridPane hgap="8" vgap="8" VBox.vgrow="ALWAYS">
        <padding>
            <Insets top="8" right="8" bottom="8" left="8"/>
        </padding>
        
        <columnConstraints>
            <ColumnConstraints percentWidth="22" />
            <ColumnConstraints percentWidth="28" />
            <ColumnConstraints percentWidth="22" />
            <ColumnConstraints percentWidth="28" />
        </columnConstraints>
        
        <rowConstraints>
            <RowConstraints percentHeight="100" vgrow="ALWAYS" />
        </rowConstraints>
        
        <!-- 第一列：字段定义区域 -->
        <VBox spacing="8" GridPane.columnIndex="0" GridPane.vgrow="ALWAYS"
              style="-fx-background-color: white; -fx-border-color: #ffc0cb; -fx-border-radius: 10; -fx-background-radius: 10;">
            <padding>
                <Insets top="8" right="8" bottom="8" left="8"/>
            </padding>
            
            <!-- 上方按钮区域 -->
            <HBox spacing="8">
                <ComboBox fx:id="templateTypeComboBox" promptText="选择模板类型" HBox.hgrow="ALWAYS">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Word" />
                            <String fx:value="Excel" />
                        </FXCollections>
                    </items>
                    <value>
                        <String fx:value="Word" />
                    </value>
                </ComboBox>
                <Button text="导入模板" onAction="#handleImportTemplate" 
                        style="-fx-background-color: #ffe4ec; -fx-text-fill: #d81b60; -fx-border-color: #ffb6c1; -fx-border-radius: 6; -fx-background-radius: 6;" />
            </HBox>
            
            <!-- 字段定义标题 -->
            <Label text="字段定义" style="-fx-font-size: 16; -fx-font-weight: bold;" />
            
            <!-- 字段定义内容区域 -->
            <VBox spacing="5" VBox.vgrow="ALWAYS">
                <HBox spacing="8">
                    <TextField fx:id="objectFieldInput" promptText="输入字段名称" HBox.hgrow="ALWAYS" />
                    <Button text="添加字段" onAction="#handleAddObjectField" 
                            style="-fx-background-color: #ffe4ec; -fx-text-fill: #d81b60; -fx-border-color: #ffb6c1; -fx-border-radius: 6; -fx-background-radius: 6;" />
                </HBox>
                
                <ScrollPane fx:id="fieldItemsScrollPane" VBox.vgrow="SOMETIMES" fitToWidth="true" styleClass="field-scroll-pane" maxHeight="200">
                    <VBox fx:id="objectFieldItemsContainer" spacing="4" onMouseClicked="#handleFieldItemClick" />
                </ScrollPane>
                
                <HBox spacing="8">
                    <TextField fx:id="listFieldInput" promptText="输入列表名称" HBox.hgrow="ALWAYS" />
                    <Button text="添加列表" onAction="#handleAddListField" 
                            style="-fx-background-color: #ffe4ec; -fx-text-fill: #d81b60; -fx-border-color: #ffb6c1; -fx-border-radius: 6; -fx-background-radius: 6;" />
                </HBox>
                
                <ScrollPane fx:id="listFieldItemsScrollPane" VBox.vgrow="ALWAYS" fitToWidth="true" styleClass="field-scroll-pane">
                    <VBox fx:id="listFieldItemsContainer" spacing="4" onMouseClicked="#handleListItemClick" />
                </ScrollPane>
            </VBox>
        </VBox>
        
        <!-- 第二列：模板编辑区域 -->
        <VBox spacing="8" GridPane.columnIndex="1" GridPane.vgrow="ALWAYS"
              style="-fx-background-color: white; -fx-border-color: #ffc0cb; -fx-border-radius: 10; -fx-background-radius: 10;">
            <padding>
                <Insets top="8" right="8" bottom="8" left="8"/>
            </padding>
            
            <!-- 上方按钮区域 -->
            <HBox spacing="8">
                <Button text="保存模板" onAction="#handleSaveTemplate" 
                        style="-fx-background-color: #ffe4ec; -fx-text-fill: #d81b60; -fx-border-color: #ffb6c1; -fx-border-radius: 6; -fx-background-radius: 6;" />
                <Button text="生成模板" onAction="#handleGenerateTemplate" 
                        style="-fx-background-color: #ffe4ec; -fx-text-fill: #d81b60; -fx-border-color: #ffb6c1; -fx-border-radius: 6; -fx-background-radius: 6;" />
                <Button text="导出字段" onAction="#handleExportFields" 
                        style="-fx-background-color: #ffe4ec; -fx-text-fill: #d81b60; -fx-border-color: #ffb6c1; -fx-border-radius: 6; -fx-background-radius: 6;" />
            </HBox>
            
            <!-- 模板编辑标题 -->
            <Label text="模板编辑" style="-fx-font-size: 16; -fx-font-weight: bold;" />
            
            <!-- 显示当前模板名称 -->
            <Label fx:id="templateNameLabel" text="未选择模板" style="-fx-font-style: italic; -fx-text-fill: #999;" />
            
            <!-- 模板编辑内容区域 -->
            <StackPane VBox.vgrow="ALWAYS">
                <!-- Word模式下的编辑器 -->
                <TextArea fx:id="wordEditor" promptText="导入Word模板后在此编辑..." 
                          wrapText="true" visible="true" styleClass="template-editor" VBox.vgrow="ALWAYS" />
                
                <!-- Excel模式下的表格编辑器 -->
                <TableView fx:id="excelEditor" visible="false" styleClass="template-editor" editable="true">
                    <!-- 表格列会动态添加 -->
                </TableView>
            </StackPane>
        </VBox>
        
        <!-- 第三列：数据填充区域 -->
        <VBox spacing="8" GridPane.columnIndex="2" GridPane.vgrow="ALWAYS"
              style="-fx-background-color: white; -fx-border-color: #ffc0cb; -fx-border-radius: 10; -fx-background-radius: 10;">
            <padding>
                <Insets top="8" right="8" bottom="8" left="8"/>
            </padding>
            
            <!-- 上方按钮区域 -->
            <HBox spacing="8">
                <Button text="导入数据" onAction="#handleImportData" 
                        style="-fx-background-color: #ffe4ec; -fx-text-fill: #d81b60; -fx-border-color: #ffb6c1; -fx-border-radius: 6; -fx-background-radius: 6;" />
            </HBox>
            
            <!-- 数据填充标题 -->
            <Label text="数据填充" style="-fx-font-size: 16; -fx-font-weight: bold;" />
            
            <!-- 数据填充内容区域 -->
            <VBox spacing="5" VBox.vgrow="ALWAYS">
                <ScrollPane fx:id="dataItemsScrollPane" VBox.vgrow="SOMETIMES" fitToWidth="true" styleClass="field-scroll-pane" minHeight="100" maxHeight="300">
                    <VBox fx:id="objectDataItemsContainer" spacing="4" />
                </ScrollPane>
                
                <ScrollPane fx:id="listDataItemsScrollPane" VBox.vgrow="ALWAYS" fitToWidth="true" styleClass="field-scroll-pane">
                    <VBox fx:id="listDataItemsContainer" spacing="4" />
                </ScrollPane>
            </VBox>
        </VBox>
        
        <!-- 第四列：实时预览区域 -->
        <VBox spacing="8" GridPane.columnIndex="3" GridPane.vgrow="ALWAYS"
              style="-fx-background-color: white; -fx-border-color: #ffc0cb; -fx-border-radius: 10; -fx-background-radius: 10;">
            <padding>
                <Insets top="8" right="8" bottom="8" left="8"/>
            </padding>
            
            <!-- 上方按钮区域 -->
            <HBox spacing="8">
                <Button text="生成文档" onAction="#handleGenerateDocument" 
                        style="-fx-background-color: #ffe4ec; -fx-text-fill: #d81b60; -fx-border-color: #ffb6c1; -fx-border-radius: 6; -fx-background-radius: 6;" />
            </HBox>
            
            <!-- 实时预览标题 -->
            <Label text="实时预览" style="-fx-font-size: 16; -fx-font-weight: bold;" />
            
            <!-- 实时预览内容区域 -->
            <ScrollPane fx:id="previewScrollPane" VBox.vgrow="ALWAYS" fitToWidth="true" styleClass="preview-scroll-pane">
                <StackPane VBox.vgrow="ALWAYS" minHeight="750">
                    <!-- Word模式下的预览 -->
                    <TextArea fx:id="wordPreviewArea" editable="false" wrapText="true" 
                              styleClass="preview-area" visible="true" />
                    
                    <!-- Excel模式下的预览 -->
                    <TableView fx:id="excelPreviewArea" styleClass="preview-area" visible="false">
                        <!-- 表格列会动态添加 -->
                    </TableView>
                </StackPane>
            </ScrollPane>
        </VBox>
    </GridPane>
</VBox> 