<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.lang.String?>
<?import javafx.collections.*?>

<VBox spacing="15" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.timelordtty.docgen.controller.DocumentGeneratorController"
      prefHeight="550.0" prefWidth="800.0"
      stylesheets="@../css/styles.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <!-- 顶部操作区域 -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <!-- 模板类型选择 -->
        <Label text="模板类型：" style="-fx-text-fill: -pink-text;"/>
        <ComboBox fx:id="templateTypeComboBox" prefWidth="120">
            <items>
                <javafx.collections.FXCollections fx:factory="observableArrayList">
                    <String fx:value="Word文档" />
                    <String fx:value="Excel表格" />
                </javafx.collections.FXCollections>
            </items>
        </ComboBox>
        
        <!-- 模板选择按钮 -->
        <Button text="选择模板" onAction="#handleSelectTemplate" styleClass="action-button"/>
        
        <!-- 按钮组 -->
        <HBox HBox.hgrow="ALWAYS"/>
        <Button text="字段导出" onAction="#handleExportFields" styleClass="action-button"/>
        <Button text="Excel数据导入" onAction="#handleImportDataExcel" styleClass="action-button"/>
    </HBox>
    
    <!-- 字段管理和数据区域 -->
    <SplitPane VBox.vgrow="ALWAYS" orientation="HORIZONTAL" dividerPositions="0.5">
        <!-- 左侧：字段管理区域 -->
        <VBox spacing="10">
            <!-- 字段列表管理区域 -->
            <VBox spacing="10">
                <HBox spacing="5">
                    <Label text="对象字段：" style="-fx-text-fill: -pink-text;"/>
                    <TextField fx:id="objectFieldInput" HBox.hgrow="ALWAYS" promptText="输入对象字段名称"/>
                    <Button text="添加" onAction="#handleAddObjectField" styleClass="action-button"/>
                </HBox>
                <HBox spacing="5">
                    <Label text="列表名称：" style="-fx-text-fill: -pink-text;"/>
                    <TextField fx:id="listFieldInput" HBox.hgrow="ALWAYS" promptText="输入列表名称"/>
                    <Button text="添加" onAction="#handleAddListField" styleClass="action-button"/>
                </HBox>
            </VBox>
            
            <!-- 字段列表区域 -->
            <Label text="字段列表" style="-fx-text-fill: -pink-text; -fx-font-weight: bold;"/>
            
            <!-- 对象字段列表 -->
            <TitledPane text="对象字段" expanded="true" collapsible="true">
                <TableView fx:id="objectFieldsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="objectFieldNameColumn" text="字段名称" prefWidth="120"/>
                        <TableColumn fx:id="objectFieldPlaceholderColumn" text="占位符" prefWidth="150"/>
                        <TableColumn fx:id="objectFieldDeleteColumn" text="操作" prefWidth="50"/>
                    </columns>
                </TableView>
            </TitledPane>
            
            <!-- 列表字段区域 -->
            <TitledPane text="列表字段" expanded="true" collapsible="true" VBox.vgrow="ALWAYS">
                <VBox fx:id="listFieldsContainer" spacing="10">
                    <!-- 列表字段会动态添加到这里 -->
                </VBox>
            </TitledPane>
            
            <!-- 模板编辑区域 -->
            <Label text="模板编辑区" style="-fx-text-fill: -pink-text; -fx-font-weight: bold;"/>
            <StackPane VBox.vgrow="ALWAYS">
                <!-- Word模式编辑区 -->
                <TextArea fx:id="wordEditor" styleClass="template-editor" wrapText="true" visible="true"/>
                
                <!-- Excel模式编辑区 -->
                <TableView fx:id="excelEditor" visible="false" editable="true">
                    <!-- 动态添加列 -->
                </TableView>
            </StackPane>
            
            <!-- 底部按钮区 -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="保存模板" onAction="#handleSaveTemplate" styleClass="action-button"/>
                <Button text="生成模板" onAction="#handleGenerateTemplate" styleClass="action-button"/>
            </HBox>
        </VBox>
        
        <!-- 右侧：数据填充和预览区域 -->
        <VBox spacing="10">
            <!-- 字段填充区域 -->
            <Label text="数据填充区域" style="-fx-text-fill: -pink-text; -fx-font-weight: bold;"/>
            
            <!-- 对象字段填充 -->
            <TitledPane text="对象字段填充" expanded="true" collapsible="true">
                <TableView fx:id="objectDataTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="objectFieldNameDataColumn" text="字段名称" prefWidth="120"/>
                        <TableColumn fx:id="objectFieldValueColumn" text="填充值" prefWidth="200"/>
                    </columns>
                </TableView>
            </TitledPane>
            
            <!-- 列表数据填充 -->
            <TitledPane text="列表数据填充" expanded="true" collapsible="true" VBox.vgrow="ALWAYS">
                <VBox fx:id="listDataContainer" spacing="10">
                    <!-- 动态添加列表数据表格 -->
                </VBox>
            </TitledPane>
            
            <!-- 实时预览区域 -->
            <Label text="实时预览" style="-fx-text-fill: -pink-text; -fx-font-weight: bold;"/>
            <StackPane VBox.vgrow="ALWAYS">
                <!-- Word预览区 -->
                <TextArea fx:id="wordPreviewArea" VBox.vgrow="ALWAYS" editable="false" 
                         styleClass="preview-area" wrapText="true" visible="true"/>
                
                <!-- Excel预览区 -->
                <TableView fx:id="excelPreviewArea" visible="false">
                    <!-- 动态添加列 -->
                </TableView>
            </StackPane>
            
            <!-- 底部按钮区 -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="生成文档" onAction="#handleSaveDocument" styleClass="action-button"/>
            </HBox>
        </VBox>
    </SplitPane>
</VBox> 