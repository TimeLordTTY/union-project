<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox spacing="15" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.timelordtty.docgen.controller.DocumentGeneratorController"
      prefHeight="400.0" prefWidth="500.0">
   <padding>
      <Insets top="20" right="20" bottom="20" left="20"/>
   </padding>
   
   <VBox spacing="15" VBox.vgrow="ALWAYS">
      <HBox spacing="10" alignment="CENTER_LEFT">
         <Label text="文档类型：" />
         <ComboBox fx:id="documentTypeComboBox" prefHeight="25.0" prefWidth="150.0" />
      </HBox>
      
      <HBox spacing="10" alignment="CENTER_LEFT">
         <Label text="模板文件：" />
         <TextField fx:id="templateFilePathTextField" promptText="选择模板文件" HBox.hgrow="ALWAYS" />
         <Button fx:id="chooseTemplateFileButton" mnemonicParsing="false" onAction="#chooseTemplateFile" text="浏览..." prefWidth="80.0" />
      </HBox>
      
      <HBox spacing="10" alignment="CENTER_LEFT">
         <Label text="数据文件：" />
         <TextField fx:id="dataFilePathTextField" promptText="选择JSON数据文件" HBox.hgrow="ALWAYS" />
         <Button fx:id="chooseDataFileButton" mnemonicParsing="false" onAction="#chooseDataFile" text="浏览..." prefWidth="80.0" />
      </HBox>
      
      <HBox spacing="10" alignment="CENTER_LEFT">
         <Label text="输出目录：" />
         <TextField fx:id="outputDirectoryTextField" promptText="选择输出目录" HBox.hgrow="ALWAYS" />
         <Button fx:id="chooseOutputDirectoryButton" mnemonicParsing="false" onAction="#chooseOutputDirectory" text="浏览..." prefWidth="80.0" />
      </HBox>
      
      <VBox spacing="5" VBox.vgrow="ALWAYS">
         <padding>
            <Insets top="10" />
         </padding>
         <Label text="状态：" />
         <Label fx:id="statusLabel" text="就绪" style="-fx-background-color: #f5f5f5; -fx-padding: 5 10; -fx-background-radius: 3;" wrapText="true" />
      </VBox>
      
      <HBox alignment="CENTER_RIGHT">
         <Button fx:id="generateButton" mnemonicParsing="false" onAction="#generateDocument" prefHeight="30.0" prefWidth="120.0" text="生成文档" style="-fx-base: #4CAF50;" />
      </HBox>
   </VBox>
</VBox> 