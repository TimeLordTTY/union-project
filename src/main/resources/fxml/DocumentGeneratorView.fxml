<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.timelordtty.docgen.controller.DocumentGeneratorController"
      stylesheets="@../css/styles.css">
   
   <top>
      <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #F8F8F8; -fx-padding: 10 15; -fx-border-color: #EEE; -fx-border-width: 0 0 1 0;">
         <Label text="文档类型：" style="-fx-text-fill: -pink-text;"/>
         <ComboBox fx:id="documentTypeComboBox" prefHeight="25.0" prefWidth="150.0" 
                  style="-fx-border-color: -pink-light; -fx-border-radius: 3;"/>
                  
         <Label text="模板文件：" style="-fx-text-fill: -pink-text; -fx-padding: 0 0 0 15;"/>
         <TextField fx:id="templateFilePathTextField" promptText="选择模板文件" HBox.hgrow="ALWAYS" 
                   style="-fx-border-color: -pink-light; -fx-border-radius: 3;"/>
         <Button fx:id="chooseTemplateFileButton" mnemonicParsing="false" onAction="#chooseTemplateFile" 
                 text="浏览..." prefWidth="80.0" styleClass="action-button"/>
      </HBox>
   </top>
   
   <center>
      <HBox spacing="10" style="-fx-padding: 10;" VBox.vgrow="ALWAYS">
         <!-- 左侧：模板编辑区域 -->
         <VBox spacing="10" HBox.hgrow="ALWAYS" style="-fx-padding: 0;">
            <!-- 字段添加部分 -->
            <VBox spacing="5" style="-fx-background-color: #F8F8F8; -fx-padding: 10; -fx-border-color: #EEE; -fx-border-radius: 5;">
                <Label text="添加字段" style="-fx-font-weight: bold; -fx-text-fill: -pink-text;"/>
                
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="普通占位符：" style="-fx-text-fill: -pink-text;"/>
                    <TextField fx:id="normalPlaceholderTextField" promptText="输入占位符名称" HBox.hgrow="ALWAYS" 
                              style="-fx-border-color: -pink-light; -fx-border-radius: 3;"/>
                    <Button fx:id="addNormalPlaceholderButton" mnemonicParsing="false" text="增加" 
                           prefWidth="60.0" styleClass="action-button"/>
                </HBox>
                
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="列表占位符：" style="-fx-text-fill: -pink-text;"/>
                    <TextField fx:id="listNameTextField" promptText="列表名称" prefWidth="150.0"
                              style="-fx-border-color: -pink-light; -fx-border-radius: 3;"/>
                    <TextField fx:id="listPropertyTextField" promptText="属性名称" HBox.hgrow="ALWAYS"
                              style="-fx-border-color: -pink-light; -fx-border-radius: 3;"/>
                    <Button fx:id="addListPlaceholderButton" mnemonicParsing="false" text="增加" 
                           prefWidth="60.0" styleClass="action-button"/>
                </HBox>
            </VBox>
            
            <!-- 字段列表部分 -->
            <HBox spacing="5" VBox.vgrow="NEVER" style="-fx-background-color: #F8F8F8; -fx-padding: 10; -fx-border-color: #EEE; -fx-border-radius: 5;">
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label text="字段列表" style="-fx-font-weight: bold; -fx-text-fill: -pink-text;"/>
                    <ScrollPane fitToWidth="true" prefHeight="100.0" style="-fx-background-color: transparent; -fx-border-color: -pink-light; -fx-border-radius: 3;">
                        <VBox fx:id="fieldsListVBox" spacing="3" style="-fx-padding: 5;"/>
                    </ScrollPane>
                </VBox>
            </HBox>
            
            <!-- 模板内容编辑部分 -->
            <VBox spacing="5" VBox.vgrow="ALWAYS" style="-fx-background-color: #F8F8F8; -fx-padding: 10; -fx-border-color: #EEE; -fx-border-radius: 5;">
                <Label text="模板内容编辑" style="-fx-font-weight: bold; -fx-text-fill: -pink-text;"/>
                <TextArea fx:id="templateContentTextArea" VBox.vgrow="ALWAYS"
                         style="-fx-border-color: -pink-light; -fx-border-radius: 3;"/>
                <HBox alignment="CENTER" spacing="10">
                    <Button fx:id="saveTemplateButton" mnemonicParsing="false" 
                           prefHeight="30.0" prefWidth="120.0" text="保存模板" styleClass="action-button"/>
                    <Button fx:id="generateTemplateButton" mnemonicParsing="false" 
                           prefHeight="30.0" prefWidth="120.0" text="生成模板" styleClass="action-button-primary"/>
                </HBox>
            </VBox>
         </VBox>
         
         <!-- 右侧：数据预览区域 -->
         <VBox spacing="10" HBox.hgrow="ALWAYS" style="-fx-padding: 0;">
            <!-- 数据输入部分 -->
            <VBox spacing="5" style="-fx-background-color: #FFFFFF; -fx-padding: 10; -fx-border-color: #EEE; -fx-border-radius: 5;">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="数据文件：" style="-fx-font-weight: bold; -fx-text-fill: -pink-text;"/>
                    <TextField fx:id="dataFilePathTextField" promptText="选择Excel数据文件" prefWidth="250.0" 
                              style="-fx-border-color: -pink-light; -fx-border-radius: 3;"/>
                    <Button fx:id="chooseDataFileButton" mnemonicParsing="false" onAction="#chooseDataFile" 
                           text="浏览..." prefWidth="80.0" styleClass="action-button"/>
                </HBox>
                
                <ScrollPane fitToWidth="true" prefHeight="150.0" style="-fx-background-color: transparent; -fx-border-color: -pink-light; -fx-border-radius: 3;">
                    <VBox fx:id="dataInputVBox" spacing="5" style="-fx-padding: 5;"/>
                </ScrollPane>
            </VBox>
            
            <!-- 预览部分 -->
            <VBox spacing="5" VBox.vgrow="ALWAYS" style="-fx-background-color: #FFFFFF; -fx-padding: 10; -fx-border-color: #EEE; -fx-border-radius: 5;">
                <Label text="实时预览" style="-fx-font-weight: bold; -fx-text-fill: -pink-text;"/>
                <ScrollPane fx:id="previewScrollPane" VBox.vgrow="ALWAYS"
                            style="-fx-border-color: -pink-light; -fx-border-radius: 3;">
                    <VBox fx:id="previewContentVBox" style="-fx-background-color: white; -fx-padding: 10;"/>
                </ScrollPane>
                <HBox alignment="CENTER_RIGHT">
                    <Button fx:id="saveDocumentButton" mnemonicParsing="false" 
                           prefHeight="30.0" prefWidth="120.0" text="保存文档" styleClass="action-button-primary"/>
                </HBox>
            </VBox>
         </VBox>
      </HBox>
   </center>
   
   <bottom>
      <HBox alignment="CENTER_LEFT" style="-fx-padding: 5px; -fx-background-color: #F8F8F8;">
         <Label fx:id="statusLabel" text="就绪" style="-fx-text-fill: #666;"/>
      </HBox>
   </bottom>
</BorderPane> 